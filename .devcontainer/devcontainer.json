{
  "name": "RepoMind Development Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",
  
  // Features to add to the dev container
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "usernamehw.errorlens",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "files.exclude": {
          "**/.next": true,
          "**/node_modules": true
        },
        "search.exclude": {
          "**/.next": true,
          "**/node_modules": true,
          "**/package-lock.json": true
        }
      }
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "notify"
    }
  },

  // Use 'postStartCommand' to run commands after the container starts
  "postStartCommand": "echo 'Container started! Run npm run dev to start the development server.'",

  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root
  "remoteUser": "node",

  // Mount the workspace
  "workspaceFolder": "/workspace",

  // Mount Docker socket from host to enable Docker commands
  // This allows the container to use the host's Docker daemon
  // To use Docker-in-Docker instead, remove this mount and unset DOCKER_HOST
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ],

  // Set environment variables
  "remoteEnv": {
    "NODE_ENV": "development",
    // Connect to host Docker daemon by default
    // To use Docker-in-Docker, comment out or remove DOCKER_HOST
    "DOCKER_HOST": "unix:///var/run/docker-host.sock"
  },

  // Run commands after container creation
  // Sets up Docker socket permissions and installs npm dependencies
  "postCreateCommand": "bash .devcontainer/setup-docker.sh && npm install"
}




